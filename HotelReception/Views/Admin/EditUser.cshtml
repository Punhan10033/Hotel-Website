<div class="div2" id="container_2">
    @using (Html.BeginForm("OnPost", "Admin"))
    {
                @Html.HiddenFor(h => @Model.User.Id);
                @Html.HiddenFor(h => @Model.User.FirstName);
                @Html.HiddenFor(h => @Model.User.LastName);
                @Html.HiddenFor(h => @Model.User.LastName);
                @Html.HiddenFor(h => @Model.User.Email);
                @Html.HiddenFor(h => @Model.User.NormalizedEmail);
    <label id="name-label">User Id </label>
      <input type="hidden"  id="name" asp-for="User.Id" disabled class="form forborder" ><br><!--name--->
      <input type="text" id="name" asp-for="User.UserName" disabled class="form forborder" ><br><!--name--->
      <div class="errmsg">
      <span  
      style="background-color:white;margin-left:-1vw;border-radius:8px;text-align:center;
margin-top:-8.5vw;position:absolute;width:19vw" class="text-danger numbervalidation" 
      asp-validation-for="User.Email" class="errormessage"></span>
      </div>
    <label class="toblack" id="email-label">First Name</label>
      <input type="text" id="email" asp-for="User.FirstName" disabled maxlength="4" class="form forborder" required ><br><!---email-->
      <label class="toblack"  >Role Type</label>
     <div class="my-3">
                    
                    @for (int i = 0; i < @Model.Roles.Count(); i++)
                    {
                        <div class="form-check">
                            @Html.CheckBoxFor(c => @Model.Roles[i].Selected)
                            @Html.HiddenFor(h => @Model.Roles[i].Value)
                            
                            @Html.LabelFor(l => @Model.Roles[i].Selected, @Model.Roles[i].Text, new {@class="form-check-label"})
                            @Html.HiddenFor(h => @Model.Roles[i].Text)
                        </div>
                    }
                </div>
    <input type="submit" id="submit" name="submit" value="Submit">
    }
</div>



